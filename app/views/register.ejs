<%- include header %>
<form class="form-horizontal" method="post">
  <fieldset>
    <% if(registerType != 'admin') { %>
        <legend>员工注册</legend>
    <% } else {%>
        <legend>管理员注册</legend>
    <% } %>
    <input type="hidden" name="userType" value="<%= registerType %>">
    <div class="control-group">
      <label class="control-label" for="username">用户名</label>
      <div class="controls">
        <input type="text" class="input-xlarge" id="username" name="username">
        <p class="help-block">你的用户名，用于登陆和显示。</p>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="password">密码</label>
      <div class="controls">
        <input type="password" class="input-xlarge" id="password" name="password">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="password-repeat">再次输入密码</label>
      <div class="controls">
        <input type="password" class="input-xlarge" id="password-repeat" name="password-repeat">
      </div>
    </div>
    <% if(registerType == 'staff') { %>
        <div class="control-group">
          <label class="control-label" for="vehicleName">车辆名</label>
          <div class="controls">
              <input type="text" class="input-xlarge" id="vehicleName" name="vehicleName">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="staffName">员工名</label>
          <div class="controls">
              <input type="text" class="input-xlarge" id="staffName" name="staffName">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="phoneNumber">手机号</label>
          <div class="controls">
              <input type="text" class="input-xlarge" id="phoneNumber" name="phoneNumber">
          </div>
        </div>
    <% } %>
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">注册</button>
    </div>
  </fieldset>
</form>
<%- include footer %>
