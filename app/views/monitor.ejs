<%- include header %>
    <link rel="stylesheet" href="stylesheets<%= locals.url + '.css'%>">
    <div class="row-fluid">
        <div class="span9">
            <div id="map_canvas">
            </div>
        </div>

        <div class="span3">
            <div class="sidebox">
                <div class="sidebox-header">
                    <div href="" class="sidebox-header-button" id="history">查询车辆历史</div>
                    <h3 class="sidebox-header-title">
                        车辆<span class="sidebox-header-count">(10)</span>
                    </h3>
                </div>

                <div class="sidebox-body">
                    <div class="sidebox-filter">
                        <input class="sidebox-search" type="text" placeholder="按车牌号查询...">
                        <ul class="sidebox-region">
                            <li><a href="" class="region-tab">全部</a><li>
                            <li><a href="" class="region-tab">武昌</a><li>
                            <li><a href="" class="region-tab">洪山</a><li>
                            <li><a href="" class="region-tab">江夏</a><li>
                            <li><a href="" class="region-tab">刘芳</a><li>
                        </ul>
                    </div>


                    <ul class="sidebox-list">
                        <% staffs.forEach(function (staff, index) { %>
                            <li class="item">
                                <a href="">
                                    <span class="vehiclename"><%= staff.vehicleName %></span> /
                                    <span class="staffname"><%= staff.staffName %></span>
                                </a>
                                <span class="vehiclestatus">下线...</span>
                                <span class="vehicledescription">电话号：<%= staff.phoneNumber %><br />其他信息</span>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <script type="text/javascript" src="javascripts/baidumap.js"></script>
    <script type="text/javascript" src="javascripts/monitoring.js"></script>

