<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title><%= title %> - 车辆监控平台</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
    <link href="stylesheets/bootstrap-responsive.css" rel="stylesheet">
  </head>
  <body>
  
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">车辆监控平台</a>
          <div class="nav-collapse">
            <ul class="nav">
              <% if (user) { %>
                <li><a href="/logout">注销</a></li>
              <% } else { %>
                <li <% if (currenturl == '/livemap') { %>class="active"<% } %> >
                <a href="/livemap">实况地图</a></li>

                <li <% if (currenturl == "/login") { %>class="active"<% } %> >
                <a href="/login">登陆</a></li>

                <li <% if (currenturl == '/reg') { %>class="active"<% } %>><a href="/reg">注册</a></li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div id="container" class="container">
      <% if (success) { %>
        <div class="alert alert-success">
          <%= success %>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
      <% } %>